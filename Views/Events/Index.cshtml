@model IEnumerable<MovieApp.Entities.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="container mt-3">
    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Event
        </a>
    </div>
    <hr />
    <div class="row">

        <div class="col-lg-4">
            <div>
                @await Component.InvokeAsync("EventCalendar")
            </div>
        </div>

        <div class="col-lg-8">
            <div class="d-flex flex-wrap">
                <!-- Calendar View Component -->


                <!-- Table -->
                <div class="">
                    <h2 class="mb-4">Events</h2>

                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Title)</th>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                                <th>@Html.DisplayNameFor(model => model.Location)</th>
                                <th>@Html.DisplayNameFor(model => model.Organizer)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@item.StartDate.ToString("MMMM d, yyyy h:mm tt")</td>
                                    <td>@item.EndDate.ToString("MMMM d, yyyy h:mm tt")</td>
                                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Organizer.Username)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>




    <!-- Flex container for calendar and table -->
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"></script>
}
