@model WatchlistEditViewModel

<div class="container mt-5">
    <h1>Edit Watchlist</h1>
    <form asp-action="Edit" asp-controller="Watchlist" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" name="Name" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" name="Description" class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Movies</label>
            <select class="form-control select2" name="movieIds" multiple="multiple" asp-for="MovieIds" asp-items="ViewBag.MovieOptions">
            </select>
            <span asp-validation-for="MovieIds" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Save</button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: "Select movies",
                allowClear: true
            });
        });
    </script>
}
