@model MovieUpdateViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h2 class="mb-0 row justify-content-center">Edit Movie</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-group">
                            <label asp-for="Title" class="form-label">Movie Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                            <input asp-for="ReleaseDate" type="text" class="form-control datepicker" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DirectorId" class="form-label">Director</label>
                            <select asp-for="DirectorId" class="form-control select2" asp-items="ViewBag.Directors" data-placeholder="Select director">
                                <option value="">Select Director</option>
                            </select>
                            <span asp-validation-for="DirectorId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Genres</label>
                            <select class="form-control select2" name="GenreIds" multiple="multiple" asp-for="GenreIds" asp-items="ViewBag.Genres" data-placeholder="Select genres">
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Actors</label>
                            <select class="form-control select2" name="ActorIds" multiple="multiple" asp-for="ActorIds" asp-items="ViewBag.Actors" data-placeholder="Select actors">
                            </select>
                            <span asp-validation-for="ActorIds" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Current Image</label>
                            <div>
                                <img src="~/img/@Model.Image" class="img-fluid rounded mb-3" alt="@Model.Title" style="max-width: 150px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="imageFile" class="form-label">New Image</label>
                            <input type="file" id="imageFile" name="imageFile" class="form-control" />
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: function(){
                    $(this).data('placeholder');
                },
                allowClear: true
            });

            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}
