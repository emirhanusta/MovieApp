@model Movie

<div class="container mt-5">
    <div class="row">
        <!-- Film Detayları -->
        <div class="col-lg-4 col-md-6 col-sm-12">
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-lg-8 col-md-6 col-sm-12">
            <h1 class="h3">@Model.Title</h1>
            Directed by <a asp-action="Details" asp-controller="Director" asp-route-id="@Model.DirectorId"
                class="btn btn-link">@Model.Director.Name</a>
            <div class="mt-2">
                @foreach (var genre in Model.Genres)
                {
                    <a asp-action="List" asp-controller="Genre" asp-route-id="@genre.Id"
                        class="badge bg-secondary text-decoration-none me-1">@genre.Name</a>
                }
            </div>
            <p class="mt-3">@Model.Description</p>
            <p class="text-muted">Release Date: @Model.ReleaseDate.ToShortDateString()</p>
            <div class="mt-2">
                @foreach (var actor in Model.Actors ?? Enumerable.Empty<Actor>())
                {
                    <a asp-action="Details" asp-controller="Actor" asp-route-id="@actor.Id"
                        class="badge bg-secondary text-decoration-none me-1">@actor.Name</a>
                }
            </div>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Back to Home</a>
        </div>
    </div>

    <!-- Yorumlar Bölümü -->
    <div class="bg-light mt-3 p-4 rounded">
        <div class="card border-0">
            <div class="card-header pb-0">
                <h4><span id="reviewCount">@Model.Reviews.Count()</span> adet yorum var.</h4>
            </div>
            <div class="card-body">
                <div id="review">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="my-4 d-flex">
                            <img src="~/img/@review.User.Image" alt="" class="avatar rounded-circle me-3"
                                style="width: 50px; height: 50px;">
                            <div>
                                <div class="mb-2 d-flex align-items-center">
                                    <h6 class="me-2"><a href="/profile/@review.User.Username">Reviewed by
                                            @review.User.Username</a></h6>
                                    <span class="text-muted">@review.CreatedDate</span>
                                </div>
                                <p>@review.Content</p>
                                <div class="d-flex align-items-center mt-2">
                                    <div class="star-rating readonly">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star-fill text-muted"></i>
                                            }
                                        }
                                    </div>
                                    <div class="d-flex align-items-center ms-3">
                                        <button class="btn btn-link like-button" data-review-id="@review.Id">
                                            <i class="bi bi-heart"></i>
                                        </button>
                                        <span class="like-count" id="like-count-@review.Id">@review.Likes.Count</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (User.Identity!.IsAuthenticated)
                {
                    <hr class="my-4">
                    <div>
                        <h4 class="mb-3">Yorum Ekle</h4>
                        <form asp-action="AddReview" method="post">
                            <input type="hidden" name="MovieId" value="@Model.Id" />
                            <div class="mb-3">
                                <label for="Rating" class="form-label">Rating</label>
                                <div class="star-rating">
                                    <i class="bi bi-star-fill" data-value="1"></i>
                                    <i class="bi bi-star-fill" data-value="2"></i>
                                    <i class="bi bi-star-fill" data-value="3"></i>
                                    <i class="bi bi-star-fill" data-value="4"></i>
                                    <i class="bi bi-star-fill" data-value="5"></i>
                                </div>
                                <input type="hidden" id="Rating" name="Rating" />
                            </div>
                            <div class="mb-3">
                                <label for="Content" class="form-label">Yorum</label>
                                <textarea id="Content" name="Content" rows="3" class="form-control" required></textarea>
                                <div class="invalid-feedback">
                                    Please provide your review content.
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    </div>
                }
                else
                {
                    <p>Yorum yapabilmek için giriş yapmalısınız. <a href="/users/login">Giriş Yap</a></p>
                }
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                // Star rating click event
                $('.star-rating:not(.readonly) i').on('click', function () {
                    var rating = $(this).data('value');
                    $('#Rating').val(rating);
                    $(this).siblings().removeClass('text-warning').addClass('text-muted');
                    $(this).prevAll().addBack().removeClass('text-muted').addClass('text-warning');
                });

                // Like button click event
                $('.like-button').click(function () {
                    var reviewId = $(this).data('review-id');
                    var likeCountElement = $('#like-count-' + reviewId);

                    $.ajax({
                        url: '@Url.Action("Like", "Review")',
                        type: 'POST',
                        data: { reviewId: reviewId },
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            likeCountElement.text(response.likeCount);
                        },
                        error: function () {
                            alert('Like işlemi başarısız oldu.');
                        }
                    });
                });
            });
        </script>
        <style>
            .star-rating i {
                font-size: 1.5rem;
                cursor: pointer;
            }

            .star-rating.readonly i {
                cursor: default;
            }

            .text-warning {
                color: #ffc107 !important;
            }

            .text-muted {
                color: #e4e5e9 !important;
            }
        </style>
    }
