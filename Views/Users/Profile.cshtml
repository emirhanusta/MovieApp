@model User

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12">
            <img src="~/img/@Model.Image" class="img-fluid rounded-circle mb-3" alt="@Model.Username">
        </div>
        <div class="col-lg-8 col-md-6 col-sm-12">
            <h1 class="h3">@Model.Name</h1>
            <p class="text-muted">@Model.Username</p>
            <p>@Model.Biography</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Back to Home</a>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            @foreach (var review in Model.Reviews)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100 text-white bg-dark">
                    <div class="card-header d-flex align-items-center bg-dark">
                        <a href="/profile/@review.User.Username" class="d-flex align-items-center">
                            <img src="~/img/@review.User.Image" class="rounded-circle me-3"
                                style="width: 40px; height: 40px;" alt="@review.User.Username">
                            <div>
                                <h5 class="card-title mb-0 text-white" style="font-size: 1rem;">@review.User.Username</h5>
                            </div>
                        </a>
                    </div>
                        <div class="card-body d-flex">
                            <div>
                                <img src="~/img/@review.Movie.Image" class="img-fluid me-3" style="width: 100px;"
                                    alt="@review.Movie.Title">
                            </div>
                            <div>
                                <h5 class="card-title mb-0 text-white">@review.Movie.Title <span
                                        class="text-muted">@review.Movie.ReleaseDate.ToString("yyyy")</span></h5>
                                <div class="text-warning my-2">
                                    <p class="card-text">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < @review.Rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else if (i == @review.Rating && @review.Rating % 1 != 0)
                                            {
                                                <i class="fas fa-star-half-alt"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                </div>
                                <p class="card-text">@review.Content</p>
                            </div>
                        </div>
                        <div class="card-footer bg-dark d-flex justify-content-between">
                            <span class="text-muted" style="font-size: 0.9rem;">@review.CreatedDate</span>
                            <span class="text-muted" style="font-size: 0.9rem; float: right;"><i class="bi bi-heart"></i>@review.Likes.Count</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
