<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieApp</title>

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.css" rel="stylesheet" />

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.js"></script>

    <!-- Custom CSS and JS -->
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a href="/" class="navbar-brand">
                <i class="bi bi-code-square"></i> MovieApp
            </a>

            <ul class="navbar-nav ms-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/profile/@User.Identity.Name" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Users" asp-action="Logout" class="nav-link">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Watchlist" asp-action="Index" class="nav-link">Watchlist</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Events" asp-action="Index" class="nav-link">Events</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Users" asp-action="Login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Users" asp-action="Register" class="nav-link">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="container p-4">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5>What is MovieApp</h5>
                    <p>
                        MovieApp is your go-to platform for discovering, reviewing, and enjoying movies. Stay tuned for
                        the latest updates and features!
                    </p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0"></div>
                <div class="col-lg-4 col-md-12 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Follow Us</h5>
                    <a href="#" class="text-dark me-4"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-dark me-4"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-dark me-4"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-dark"><i class="bi bi-youtube"></i></a>
                </div>
            </div>
        </div>
        <div class="text-center p-3 bg-dark text-light">
            © 2024 MovieApp. All rights reserved.
        </div>
    </footer>
   @RenderSection("Scripts", required: false)
</body>

</html>
